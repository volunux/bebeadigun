extends ../layouts/layout

block content
	
	.video-add
	
		if errors
			p Errors found trying to process form. These include : -
			ul.alert.alert-danger
				for error in errors
					li!= error.msg

		form(method ='post' ,	action ='' enctype ='multipart/form-data')
			.form-group
				label(for ='title') Title * :
				input(type ='text' id ='title' name ='title' class ='form-control form-control-sm' placeholder ='Plato with Socrates' value =(undefined === video ? '' : video.title))

			.form-group
				label(for ='date') Date * :
				input(type ='text' id ='date' name ='date' class ='form-control form-control-sm' placeholder ='1900' required ='true' value =(undefined === video ? '' : video.date))

			.form-group
				label(for ='century') Period * :
				select(id ='century' name ='century' class ='form-control form-control-sm' required ='true')
					option(value ='')
					for period in century
						if video
							option(value =period._id selected =(period._id.toString() == video.century._id || period._id.toString() == video.century) ? 'selected' : false) #{period.century} Century
						else
							option(value=period._id) #{period.century} Century

			.form-group
				label(for ='genre') Category * :
				select(id ='genre' name ='genre' class ='form-control form-control-sm' required ='true')
					option(value ='')
					for category in genre
						if video
							option(value =category._id selected =(category._id.toString() == video.genre._id || category._id.toString() == video.genre) ? 'selected' : false) #{category.genre}
						else
							option(value=category._id) #{category.genre}

			.form-group
				label(for ='country') Country * :
				select(id ='country' name ='country' class ='form-control form-control-sm' required ='true')
					option(value ='')
					for nation in country
						if video
							option(value =nation._id selected =(nation._id.toString() == video.country._id || nation._id.toString() == video.country) ? 'selected' : false) #{nation.name}
						else
							option(value=nation._id) #{nation.name}

			.form-group
				label(for ='continent') Continent * :
				select(id ='continent' name ='continent' class ='form-control form-control-sm' required ='true')
					option(value ='')
					for location in continent
						if video
							option(value =location._id selected =(location._id.toString() == video.continent._id || location._id.toString() == video.continent) ? 'selected' : false) #{location.name}
						else
							option(value=location._id) #{location.name}

			.form-group
				label(for ='region') Region * :
				select(id ='region' name ='region' class ='form-control form-control-sm' required ='true')
					option(value ='')
					for subregion in region
						if video
							option(value =subregion._id selected =(subregion._id.toString() == video.region._id || subregion._id.toString() == video.region) ? 'selected' : false) #{subregion.name}
						else
							option(value=subregion._id) #{subregion.name}

			.form-group
				label(for ='ethnic_group') Ethnic Group * :
				select(id ='ethnic_group' name ='ethnic_group' class ='form-control form-control-sm' required ='true')
					option(value ='') 
					for people in eyon
						if video
							option(value =people._id selected =(people._id.toString() == video.ethnic_group._id || people._id.toString() == video.ethnic_group) ? 'selected' : false) #{people.eyon}
						else
							option(value=people._id) #{people.eyon}

			.form-group
				label(for ='publisher') Publisher :
				input(type ='text' id ='publisher' name ='publisher' class ='form-control form-control-sm' placeholder ='British Government' value =(undefined === video ? '' : video.publisher))

			.form-group
				label(for ='language') Language :
				input(type ='text' id ='language' name ='language' class ='form-control form-control-sm' placeholder ='Benin' value =(undefined === video ? '' : video.language))

			.form-group
				label(for ='medium') Medium :
				input(type ='text' id ='medium' name ='medium' class ='form-control form-control-sm' placeholder ='Brass and Wood' value =(undefined === video ? '' : video.medium))

			.form-group
				label(for ='credit') Credits :
				input(type ='text' id ='credit' name ='credit' class ='form-control form-control-sm' placeholder ='Elliot Photography' value =(undefined === video ? '' : video.credit))

			.form-group
				label(for ='about') About Video * :
				textarea(id ='about' name ='about' required ='true' class ='form-control form-control-sm') #{(undefined === video ? '' : video.about)}

			.form-group.image
				label(for ='video') Video * :
				input(type ='file' id ='video' required ='true' name ='video' class ='form-control form-control-sm' accept ='video/*')

			p
				button(type ='submit' title ='Submit' class ='btn btn-primary float-right px-4') Submit
